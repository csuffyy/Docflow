@model NetworkCredential

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-signin" }))
                {
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Email" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })

                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in
                    </button>
                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Remember me
                    </label>
                    <a href="#" class="pull-right need-help">Need help? </a>
                    <span class="clearfix"></span>

                    if (Request.HttpMethod == "POST")
                    {
                        <div class="alert alert-danger">
                            Incorrect login or password
                        </div>
                    }
                }
            </div>
            <a href="#" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>
