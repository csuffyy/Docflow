@{
    ViewBag.Title = CustomRes.Custom.Organization;
}

<h2>@CustomRes.Custom.Organization</h2>

@{Html.RenderPartial("_NewEntityBtn");}

<div>
    @Html.Action("Grid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}
@section jslaunch {
    <script type="text/javascript">
$(function () {
    grid_init("@Url.Action("GetOrganizationList", "Organization")")

    var detailsUrl = '@Url.Action("Edit", "Organization")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
    window.location.href = detailsUrl  + '/' + e.row.Id;
    });
});
    </script>
}
