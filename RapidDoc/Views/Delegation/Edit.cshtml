@model RapidDoc.Models.ViewModels.DelegationView
@using RapidDoc.Extensions;

@{
    ViewBag.Title = UIElementRes.UIElement.Edit;
}

<h2>@UIElementRes.UIElement.Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.EmplTableFromId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("EmplTableFromId", (IEnumerable<SelectListItem>)ViewBag.EmplFromList, new { @class = "selectpicker", @data_live_search = "true", @data_size = "10" })
            @Html.ValidationMessageFor(model => model.EmplTableFromId)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.EmplTableToId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("EmplTableToId", (IEnumerable<SelectListItem>)ViewBag.EmplToList, new { @class = "selectpicker", @data_live_search = "true", @data_size = "10" })
            @Html.ValidationMessageFor(model => model.EmplTableToId)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.DateFrom)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateFrom, UIElementRes.UIElement.DATEFORMAT, new { @class = "datepicker form-control form-control-date" })
            @Html.ValidationMessageFor(model => model.DateFrom)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.DateTo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateTo, UIElementRes.UIElement.DATEFORMAT, new { @class = "datepicker form-control form-control-date" })
            @Html.ValidationMessageFor(model => model.DateTo)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.GroupProcessTableId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("GroupProcessTableId", (IEnumerable<SelectListItem>)ViewBag.GroupProcessList, new { @class = "selectpicker", @data_live_search = "true", @data_size = "10" })
            @Html.ValidationMessageFor(model => model.GroupProcessTableId)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.ProcessTableId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProcessTableId", (IEnumerable<SelectListItem>)ViewBag.ProcessList, new { @class = "selectpicker", @data_live_search = "true", @data_size = "10" })
            @Html.ValidationMessageFor(model => model.ProcessTableId)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.AliasCompanyName)
        </div>
        <div class="editor-field">
            @Html.DropDownList("CompanyTableId", (IEnumerable<SelectListItem>)ViewBag.CompanyList, new { @class = "selectpicker", @data_live_search = "true", @data_size = "10" })
            @Html.ValidationMessageFor(model => model.CompanyTableId)
        </div>

        @{Html.RenderPartial("SaveBackBtn");}
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/editentity")
}
@section jslaunch {
<script type="text/javascript">
$(function () {
    selectpicker_init();
    datepicker_init("@UIElementRes.UIElement.LangName");
    $('#ProcessTableId').change(function (event) {
        if ($('#ProcessTableId').val() != null || $('#ProcessTableId').val() != '') {
            $('select[name=GroupProcessTableId]').val(0);
            $('#GroupProcessTableId').selectpicker('refresh');
        }
        else {
            $('select[name=ProcessTableId]').val(0);
            $('#ProcessTableId').selectpicker('refresh');
        }
    });

    $('#GroupProcessTableId').change(function (event) {
        if ($('#GroupProcessTableId').val() != null || $('#GroupProcessTableId').val() != '') {
            $('select[name=ProcessTableId]').val(0);
            $('#ProcessTableId').selectpicker('refresh');

        }
        else {
            $('select[name=GroupProcessTableId]').val(0);
            $('#GroupProcessTableId').selectpicker('refresh');
        }
    });
});
</script>
}