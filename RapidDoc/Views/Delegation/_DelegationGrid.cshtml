@model RapidDoc.Models.Grids.DelegationGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.DelegationView item)
{
    <a href=@Url.Action("Edit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.DelegationView item)
{
    <a href=@Url.Action("Delete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.EmplNameFrom).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).EmplTableFromId).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.EmplNameTo).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).EmplTableToId).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.DateFrom).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).DateFrom).ToHtmlString()).Sortable(true).Filterable(true).Format("{0:dd/MM/yyyy}");
    columns.Add(o => o.DateTo).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).DateTo).ToHtmlString()).Sortable(true).Filterable(true).Format("{0:dd/MM/yyyy}");
    columns.Add(o => o.GroupProcessName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).GroupProcessTableId).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.ProcessName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).ProcessTableId).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.AliasCompanyName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.DelegationView)o.Columns).AliasCompanyName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30).WithMultipleFilters()