@model RapidDoc.Models.Grids.ItemCauseGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.ItemCauseView item)
{
    <a href=@Url.Action("Edit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DetailField(RapidDoc.Models.ViewModels.ItemCauseView item)
{
    <a href=@Url.Action("Detail", new { id=item.Id })><span class="fa fa-info-circle fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.ItemCauseView item)
{
    <a href=@Url.Action("Delete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.CaseNumber).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ItemCauseView)o.Columns).CaseNumber).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.CaseName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ItemCauseView)o.Columns).CaseName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.DepartmentName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ItemCauseView)o.Columns).DepartmentName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.Enable).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ItemCauseView)o.Columns).Enable).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DetailField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30)