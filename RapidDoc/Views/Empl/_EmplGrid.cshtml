@model RapidDoc.Models.Grids.EmplGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.EmplView item)
{
    <a href=@Url.Action("Edit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DetailField(RapidDoc.Models.ViewModels.EmplView item)
{
    <a href=@Url.Action("Detail", new { id=item.Id })><span class="fa fa-info-circle fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.EmplView item)
{
    <a href=@Url.Action("Delete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.FullName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).FullName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.TitleName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).TitleName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.FullNameParent).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).FullNameParent).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.ProfileName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).ProfileName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.DepartmentName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).DepartmentName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.UserName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).UserName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.AliasCompanyName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).AliasCompanyName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.Enable).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.EmplView)o.Columns).Enable).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DetailField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30).WithMultipleFilters()