@model RapidDoc.Models.DomainModels.PRT_QuestionList_Table
@using RapidDoc.Extensions;
@{
    Layout = "";
    string index = ViewData["counter"].ToString();
}

@using (Html.BeginCollectionItem("PRT_QuestionList_Table__QuestionList"))
{
    <div id="questionRow" class="questionRow">
    @Html.TextAreaFor(model => Model.Question, new { @class = "form-control", placeholder = "Вопрос" })
    @if (Model.DecisionList != null && Model.DecisionList.Count() > 0)
    {
        foreach (var decision in Model.DecisionList)
        {
            Html.RenderPartial("~/Views/Custom/_DecisionList.cshtml", decision, new ViewDataDictionary { { "counter", index } });
        }
    }
    @Html.ActionLink("Add new decision", "CreateNewDecisionProtocol", "Custom", new { counter = index }, new { @id = "addItemDecision_" + index, @class = "addItemDecision" })
    <br />
    <br />
    </div>
}