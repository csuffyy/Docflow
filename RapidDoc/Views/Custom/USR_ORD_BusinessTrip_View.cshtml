@model RapidDoc.Models.ViewModels.USR_ORD_BusinessTrip_View

@Html.Action("GetManualORDBusinessTrip", "Custom", new { model = Model })

<div class="modal pdfreporttrip-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@CustomRes.Custom.Users</h4>
            </div>
            <div class="modal-body" style="min-height: 180px;">
                @Html.Action("GetWorkersOrdTrip", "Custom", new { Workers = Model.Workers })
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" name="action:PrintPdfTrip" id="PrintTrip">@UIElementRes.UIElement.Print</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@UIElementRes.UIElement.Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal printorder-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="alert_placeholder"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@UIElementRes.UIElement.PrintOrder</h4>
            </div>
            <div class="modal-body" style="min-height:100px;">
                <span>
                    @Html.CheckBox("Acquainted", false, new { @data_labelauty = "Ознакомлен|Ознакомлен" })
                </span>
                <br>
                <div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@UIElementRes.UIElement.Cancel</button>
                        <button type="submit" id="printOrder" class="btn btn-success" name="action:PrintOrder">@UIElementRes.UIElement.Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal deliveryOrder-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="alert_placeholder"></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Создание рассылки</h4>
            </div>
            <div class="modal-body" style="min-height:250px;">
                @Html.TextBox("ReceiversOrder", "", new { @class = "form-control", @data_role = "tagsinputGroup", @size = 256, @maxlength = 256, placeholder = "Сотрудники" })
                <br>
                <span>
                    @Html.CheckBox("AddReaders", false, new { @data_labelauty = "Читателем|Читателем" })
                    @Html.CheckBox("AddAttachment", false, new { @data_labelauty = "Приложение|Приложение" })
                </span>
                <br>
                <div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">@UIElementRes.UIElement.Cancel</button>
                        <button type="submit" id="deliveryOrderBtnId" class="btn btn-success pull-left" name="action:DeliveryOrder">@UIElementRes.UIElement.Dispatch</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


