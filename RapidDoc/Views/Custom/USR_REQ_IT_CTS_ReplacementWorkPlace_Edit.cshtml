@model RapidDoc.Models.ViewModels.USR_REQ_IT_CTS_ReplacementWorkPlace_View
@using RapidDoc.Extensions;

@Html.Partial("_DocumentEditFields", Model)

<script type="text/javascript">
    $(function () {
        $('#WorkPlaceMovementType').change(function () {

            if ($('#WorkPlaceMovementType').val() == 1) {
                $('#ToPlace').val("-");
                $('#ToPlace').prop('readonly', "readonly");
            }
            else {
                $('#ToPlace').val("");
                $('#ToPlace').prop('readonly', "");
            }
        });

        if ($('#WorkPlaceMovementType').val() == 1) {
            $('#ToPlace').val("-").prop('readonly', '');
            $('#ToPlace').prop('readonly', 'readonly');
        }
    });
</script>