@Html.Partial("_DocumentEditFields", Model)

<script type="text/javascript">
    $(function () {
        $('#ActionsPhone').change(function () {

            if ($('#ActionsPhone').val() == 0) {
                    $('#PeriodTime').val("-");

                $('#PeriodTime').prop('readonly', 'readonly');
            }
            else {
                $('#PeriodTime').val("");
