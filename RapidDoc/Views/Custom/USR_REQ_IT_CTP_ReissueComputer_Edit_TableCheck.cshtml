@Html.HiddenFor(model => model.FromUsers)
@Html.HiddenFor(model => model.MonitorModel)
@Html.HiddenFor(model => model.MonitorSerial)
@Html.HiddenFor(model => model.NotebookModel)
@Html.HiddenFor(model => model.NotebookSerial)
@Html.HiddenFor(model => model.OtherEquipmentModel)
