                <td style="text-align: center; width: 25%;">@Html.DisplayTextFor(model => Model.MonitorSerial)</td>
                <td style="text-align:left; width: 25%;">@Html.TextAreaFor(model => Model.MonitorItemId, new { @class = "form-control flat", @rows = "1", @style = "resize: none;" })</td>
            </tr>
            <tr>
                <td style="text-align: left; font-weight:bold;">Принтер</td>
                <td style="text-align: center; width: 25%;">@Html.DisplayTextFor(model => Model.PrinterModel)</td>
                <td style="text-align: center; width: 25%;">@Html.DisplayTextFor(model => Model.PrinterSerial)</td>
                <td style="text-align:left; width: 25%;">@Html.TextAreaFor(model => Model.PrinterItemId, new { @class = "form-control flat", @rows = "1", @style = "resize: none;" })</td>
            </tr>
            <tr>
                <td style="text-align: left; font-weight:bold;">Прочее оборудование</td>
                <td style="text-align: center; width: 25%;">@Html.DisplayTextFor(model => Model.OtherEquipmentModel)</td>
                <td style="text-align: center; width: 25%;">@Html.DisplayTextFor(model => Model.OtherEquipmentSerial)</td>
                <td style="text-align:left; width: 25%;">@Html.TextAreaFor(model => Model.OtherEquipmentItemId, new { @class = "form-control flat", @rows = "1", @style = "resize: none;" })</td>
            </tr>
        </tbody>
