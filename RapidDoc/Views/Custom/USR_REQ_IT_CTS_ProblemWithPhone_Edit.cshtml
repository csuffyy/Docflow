@model RapidDoc.Models.ViewModels.USR_REQ_IT_CTS_ProblemWithPhone_View
@using RapidDoc.Extensions;

<div class="editor-label">
    @Html.LabelForRequired(model => Model.ProblemType)
</div>
<div class="editor-field">
    @Html.EnumDropDownListFor(model => model.ProblemType, new { @class = "selectpicker" })
</div>
<div class="editor-label">
    @Html.LabelForRequired(model => Model.Problem)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => Model.Problem, new { @class = "form-control summernote", @rows = "5", placeholder = "Описание проблемы", @autofocus = "required" })
</div>
<hr />
<div class="editor-label">
    @Html.LabelForRequired(model => Model.Users)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => Model.Users, new { @class = "form-control", @data_role = "tagsinputEmpl", @size = 256, @maxlength = 256, placeholder = "Имя Фамилия" })
</div>

<div class="editor-label">
    @Html.LabelForRequired(model => Model.Phone)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => Model.Phone, new { @class = "form-control", @size = 256, @maxlength = 256, placeholder = "Номер телефона пользователя" })
</div>