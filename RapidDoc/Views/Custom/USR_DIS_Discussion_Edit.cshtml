@model RapidDoc.Models.ViewModels.USR_DIS_Discussion_View
@using RapidDoc.Extensions;

@{
    var refProcessName = Html.Action("GetDocumentRefInfo", "Document", new { id = Model.RefDocumentId });
}

@if (Model.RefDocumentId.HasValue && Model.RefDocumentId != Guid.Empty)
{
    <div class="editor-label">
        @Html.LabelFor(model => Model.RefDocNum)
    </div>
    @Html.ActionLink(Model.RefDocNum.ToString() + " " + refProcessName, "ShowDocument", "Document", new { id = Model.RefDocumentId }, null)

    @Html.HiddenFor(model => model.RefDocumentId)
    @Html.HiddenFor(model => model.RefDocNum)
    <br />
}

<div class="editor-label">
    @Html.LabelForRequired(model => Model.Subject)
</div>
<div>
    @Html.TextBoxFor(model => Model.Subject, new { @class = "form-control", @size = 256, placeholder = "Тема" })
</div>

<div class="editor-label">
    @Html.LabelForRequired(model => Model.ProtocolFoldersTableId)
</div>
<div class="editor-field">
    @Html.Action("GetPRTFolderORD", "Custom", new { @processId = ViewBag.ProcessId, id = Model.ProtocolFoldersTableId })
</div>

<div class="editor-label">
    @Html.LabelForRequired(model => Model.Description)
</div>
<div>
    @Html.TextAreaFor(model => Model.Description, new { @class = "form-control summernote" })
</div>

<div class="editor-label">
    @Html.LabelForRequired(model => Model.Users)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => Model.Users, new { @class = "form-control", @data_role = "tagsinputGroup", @size = 256, placeholder = "Кому" })
</div>


