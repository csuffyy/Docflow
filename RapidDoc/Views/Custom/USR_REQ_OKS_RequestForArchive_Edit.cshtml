@model RapidDoc.Models.ViewModels.USR_REQ_OKS_RequestForArchive_View
@using RapidDoc.Extensions;


<div class="editor-label">
    @Html.LabelForRequired(model => Model.DataDoument)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => Model.DataDoument, new { @class = "form-control", @rows = "1", placeholder = "Данные по запрашиваемому документу", @autofocus = "required" })
</div>
<div class="editor-label">
    @Html.LabelForRequired(model => Model.Period)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => Model.Period, new { @class = "datetimepicker", placeholder = "Дата/время документа", @autofocus = "required", startDate = "" })
</div>
<div class="editor-label">
    @Html.LabelForRequired(model => Model.Reason)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => Model.Reason, new { @class = "form-control", @rows = "5", placeholder = "Причина запроса", @autofocus = "required" })
</div>


@section Scripts {
    <script type="text/javascript">
        $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
}