@model RapidDoc.Models.Grids.ServiceIncidentGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.ServiceIncidentView item)
{
    <a href=@Url.Action("Edit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DetailField(RapidDoc.Models.ViewModels.ServiceIncidentView item)
{
    <a href=@Url.Action("Detail", new { id=item.Id })><span class="fa fa-info-circle fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.ServiceIncidentView item)
{
    <a href=@Url.Action("Delete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.CompanyTableId).Css("hidden");

    columns.Add(o => o.ServiceName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ServiceIncidentView)o.Columns).ServiceName).ToHtmlString()).Sortable(true).Filterable(true);

    columns.Add(o => o.Description).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ServiceIncidentView)o.Columns).Description).ToHtmlString()).Sortable(true).Filterable(true);

    columns.Add(o => o.SLAIncident).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ServiceIncidentView)o.Columns).SLAIncident).ToHtmlString()).Sortable(true).Filterable(true);

    columns.Add(o => o.RoleName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ServiceIncidentView)o.Columns).RoleName).ToHtmlString()).Sortable(true).Filterable(true);
    
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DetailField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30)