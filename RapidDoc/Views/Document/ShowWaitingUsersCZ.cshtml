@model IEnumerable<RapidDoc.Models.ViewModels.WFTrackerListView>
@using RapidDoc.Extensions;
@{
    ViewBag.Title = "Ожидают подписи";
}

<h2>Ожидают подписи</h2>

@if (Model.Count() > 0)
{
    <ul>
        @foreach (var trackerItem in Model.Where(x => x.TrackerType == RapidDoc.Models.Repository.TrackerType.Waiting))
        {
            <li>
                <h5>
                    @Html.DisplayFor(modelItem => trackerItem.Executors)
                    <span> - </span>
                    @UIElementRes.UIElement.Waiting
                    <small>@Html.DisplayFor(modelItem => trackerItem.CreatedDate)</small>
                </h5>
            </li>
        }
    </ul>
}

<a href="@Url.Action("ShowDocument", "Document", new { id = ViewBag.DocumentId, isAfterView = true })" class="btn btn-default" role="button">@UIElementRes.UIElement.Back</a>
