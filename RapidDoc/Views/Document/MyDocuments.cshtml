@{
    ViewBag.Title = UIElementRes.UIElement.Dashboard;
}

<br class="hidden-print">
<ul class="nav nav-tabs" role="tablist">
    <li><a href="@Url.Action("Index", "Document")"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span> @UIElementRes.UIElement.MyProcesses</a></li>
    <li><a href="@Url.Action("AgreedDocuments", "Document")"><strong><span class="glyphicon glyphicon-check" aria-hidden="true"></span> @UIElementRes.UIElement.AgreedDocument</strong></a></li>
    <li class="active"><a href="@Url.Action("MyDocuments", "Document")"><strong><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> @UIElementRes.UIElement.MyDocument</strong></a></li>
    <li><a href="@Url.Action("MyTasks", "Document")"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> @UIElementRes.UIElement.TaskBase</a></li>
    <li><a href="@Url.Action("Index", "HistoryUser")"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> @UIElementRes.UIElement.History</a></li>
    <li><a href="@Url.Action("ArchiveDocuments", "Document")"><span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span> @UIElementRes.UIElement.DocumentArchive</a></li>
</ul>

<div>
    @Html.Action("GetAllMyDocument", "Document")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}
@section jslaunch {
<script type="text/javascript">
$(function () {
    grid_init("@Url.Action("GetMyDocumentList", "Document")")

    var detailsUrl = '@Url.Action("ShowDocument", "Document")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
    window.location.href = detailsUrl  + '/' + e.row.Id + '?isAfterView=true';
    });

    $('.popover-link').popover({
        trigger: 'hover'
    })
});
</script>
}