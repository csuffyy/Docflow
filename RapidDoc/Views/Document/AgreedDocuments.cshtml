@{
    ViewBag.Title = UIElementRes.UIElement.Dashboard;
}

<br class="hidden-print">
<ul class="nav nav-tabs" role="tablist">
    <li><a href="@Url.Action("Index", "Home")"><span class="fa fa-tasks"></span> @UIElementRes.UIElement.MyProcesses</a></li>
    <li class="active"><a href="@Url.Action("AgreedDocuments", "Document")"><strong><span class="fa fa-check-circle"></span> @UIElementRes.UIElement.AgreedDocument</strong></a></li>
    <li><a href="@Url.Action("Index", "HistoryUser")"><span class="fa fa-list"></span> @UIElementRes.UIElement.History</a></li>
    <li><a href="@Url.Action("ArchiveDocuments", "Document")"><span class="fa fa-archive"></span> @UIElementRes.UIElement.DocumentArchive</a></li>
</ul>

<div>
    @Html.Action("GetAllAgreedDocument", "Document")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}
@section jslaunch {
    grid_init("@Url.Action("GetAgreedDocumentList", "Document")")

    var detailsUrl = '@Url.Action("ShowDocument", "Document")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
    window.location.href = detailsUrl  + '/' + e.row.Id + '?isAfterView=true';
    });

    $('.popover-link').popover({
        trigger: 'hover'
    })
}