@using RapidDoc.Models.DomainModels;
@using RapidDoc.Models.Repository;
@model dynamic
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PdfReport</title>
</head>
<body>
    <div>
        <br />
        <table width="900">
            <tr>
                <td align="right">
                    <img src="@Url.Content("~/Content/Custom/image-icon/Logo.png")">
                </td>
            </tr>
        </table>
        <br />
        <h4 align="center">
            <strong>
                <font size="4" face="Arial">
                    БҰЙРЫҚ<br /><br />
                    № @Model.OrderNum от @Model.OrderDate.ToShortDateString() г.<br /><br />
                </font>
            </strong>
            <font size="4" face="Arial">
                @Model.Subject
            </font>
        </h4>
        <font size="4" face="Arial">
            @Html.Raw(@Model.MainField)
        </font>
        <hr style="height:1px;border:none;color:#333;background-color:#333;" />
        <font size="4" face="Arial">
            @Html.Raw(@Model.MainFieldTranslate)
        </font>
        <br />
        <br />
        <table width="800">
            <tr>
                <td align="left">
                    <strong>
                        <font size="4" face="Arial">
                            @Model.SignTitle
                        </font>
                    </strong>
                </td>
                <td align="right" nowrap>
                    <strong>
                        <font size="4" face="Arial">
                            @Model.SignName
                        </font>
                    </strong>
                </td>
            </tr>
            <tr>
                <td>
                    <br />
                    <font size="4" face="Arial">
                        @Html.Raw(Model.ListFileName)
                    </font>
                </td>
            </tr>
            @if (ViewBag.Acquainted == true)
            { 
            <tr>
                <td align="left">
                    <br />
                    <font size="4" face="Arial">
                        Бұйрықпен таныстым:
                    </font>
                </td>
            </tr>
            <tr>
                <td align="left">  
                    <font size="4" face="Arial">
                        С приказом ознакомлен(а):
                    </font>
                </td>
            </tr>
            }
            <tr>
                <td>
                    <br />
                </td>
            </tr>
            @*
    @if (((List<FileTable>)ViewBag.ListFiles).Count > 0)
    {
        <tr>
            <td align="left">
                <strong>
                    <font size="4" face="Arial">
                        Вложенные файлы:
                    </font>
                </strong>
            </td>
        </tr>
        foreach (FileTable file in ViewBag.ListFiles)
        {
            <tr>

                    <td align="left">
                        <font size="4" face="Arial">
                                @file.FileName
                        </font>
                    </td>

            </tr>
        }
        <tr>
            <td>
                <br />
            </td>
        </tr>
    }
            *@
            @if ((DocumentState)ViewBag.DocState == DocumentState.Closed)
            {         
                <tr>
                    <td align="left">
                        <strong>
                            <font size="3" face="Arial">
                                Согласовано:
                            </font>
                        </strong>
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                    </td>
                </tr>
                foreach (EmplTable item in ViewBag.ListUsers)
                {
                    <tr>
                               
                            <td align="left">
                                <font size="3" face="Arial">                           
                                        @item.TitleName                          
                                </font>
                            </td>
                            <td align="right">
                                <font size="3" face="Arial">
                                       @item.ShortFullNameType2
                                </font>
                            </td>
                    
                    </tr>
                }
                <tr>
                    <td>
                        <br />
                    </td>
                </tr>
            }        
            <tr>
                <td align="left">
                    <strong>
                        <font size="3" face="Arial">
                            Подготовлено:
                        </font>
                    </strong>
                </td>
            </tr>
            <tr>
                <td>
                    <br />
                </td>
            </tr>
            <tr>
                <td align="left">
                    <font size="3" face="Arial">
                        @ViewBag.Department
                    </font>
                </td>
                <td align="right" nowrap>
                    <font size="3" face="Arial">
                        @ViewBag.ManagerName
                    </font>
                </td>
            </tr>
            
        </table>
    </div>
</body>
</html>
