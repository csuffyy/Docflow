@using RapidDoc.Models.DomainModels;
@using RapidDoc.Models.Repository;
@model dynamic
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>PdfReport</title>
    <style type="text/css">
        body {
            width: 22cm;       /* cm, in or mm make more sense for PDF */
            margin-left: 45px;
            text-rendering: geometricPrecision;
            font-family: Times New Roman;
            font-size: 20px;
        }
        p {
            margin: 0;
            text-align:justify;
        }
        .container {
            height: auto;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div style="border: 1px solid black; padding: 5px;">
        <br />
        <div class="container" style="text-align: right;">
            <div>
                <img src="@Url.Content(String.Format("~/Content/Custom/image-icon/logo-{0}.png", ViewBag.CompanyAliasName))">
            </div>
        </div>
        <br />
        <h4 align="center">
            <strong>
                БҰЙРЫҚ<br /><br />
                № @Model.OrderNum от @Model.OrderDate.ToShortDateString() г.<br /><br />
            </strong>
            @Model.Subject
        </h4>
        @Html.Raw(@Model.MainField)
        <hr style="height:1px;border:none;color:#333;background-color:#333;" />
        @Html.Raw(@Model.MainFieldTranslate)
        <br />
        <br />
        <div class="container" style="text-align: right;">
            <div style="width:60%; vertical-align:top; float:left; text-align: left;">
                <strong>
                    @Model.SignTitle
                </strong>
            </div>
            <div style="width:40%; float:right;">
                <strong>
                    @Model.SignName
                </strong>
            </div>
        </div>
        <div class="container">
            <div style="text-align: left;">
                <br />
                <font size="3">
                    @Html.Raw(Model.ListFileName)
                </font>
            </div>
        </div>

        @if (ViewBag.Acquainted == true)
        {
            <div class="container">
                <div style="text-align: left;">
                    <br />
                    <font size="3">
                        Бұйрықпен таныстым, келісемін:
                    </font>
                </div>
            </div>
            <div class="container">
                <div style="text-align: left;">
                    <font size="3">
                        С приказом ознакомлен(а), согласен (на):
                    </font>
                </div>
            </div>
        }
        <br />
        @if ((DocumentState)ViewBag.DocState == DocumentState.Closed)
        {
            <div class="container">
                <div style="text-align: left;">
                    <strong>
                        <font size="3">
                            Согласовано:
                        </font>
                    </strong>
                </div>
            </div>
            <br />
            foreach (EmplTable item in ViewBag.ListUsers)
            {
                <div class="container" style="text-align: right;">
                    <div style="width:50%; vertical-align:top; float:left; text-align: left;">
                        <font size="3">
                            @item.TitleName
                        </font>
                    </div>
                    <div style="width:50%; float:right;">
                        <font size="3">
                            @item.ShortFullNameType2
                        </font>
                    </div>
                </div>
            }
            <br />
        }
        <div class="container">
            <div style="text-align: left;">
                <strong>
                    <font size="3">
                        Подготовлено:
                    </font>
                </strong>
            </div>
        </div>
        <br />
        <div class="container" style="text-align: right;">
            <div style="width:50%; vertical-align:top; float:left; text-align: left;">
                <font size="3">
                    @ViewBag.Department
                </font>
            </div>
            <div style="width:50%; float:right;">
                <font size="3">
                    @ViewBag.ManagerName
                </font>
            </div>
        </div>
    </div>
</body>
</html>
