@model RapidDoc.Models.Grids.ProtocolFoldersGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.ProtocolFoldersView item)
{
    <a href=@Url.Action("Edit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DetailField(RapidDoc.Models.ViewModels.ProtocolFoldersView item)
{
    <a href=@Url.Action("Detail", new { id=item.Id })><span class="fa fa-info-circle fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.ProtocolFoldersView item)
{
    <a href=@Url.Action("Delete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.ProtocolFolderName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ProtocolFoldersView)o.Columns).ProtocolFolderName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.ParentProtocolFolderName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ProtocolFoldersView)o.Columns).ParentProtocolFolderName).ToHtmlString()).Sortable(true).Filterable(true); 
    columns.Add(o => o.ProcessName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ProtocolFoldersView)o.Columns).ProcessName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.Enable).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.ProtocolFoldersView)o.Columns).Enable).ToHtmlString()).Sortable(true).Filterable(true); 
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DetailField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30).WithMultipleFilters()