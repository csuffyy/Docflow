@{
    ViewBag.Title = UIElementRes.UIElement.Dashboard;
}
@using GridMvc.Html;

<h3>
    @UIElementRes.UIElement.MyProcesses

    <small>
        &nbsp
    <a href="@Url.Action("ArchiveDocuments", "Document")"><span class="fa fa-archive"></span> @UIElementRes.UIElement.DocumentArchive</a>
        &nbsp
    <a href="@Url.Action("Index", "HistoryUser")"><span class="fa fa-list"></span> @UIElementRes.UIElement.History</a>
    </small>
</h3>

<div>
    @Html.Action("GetAllDocument", "Document")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}

@section jslaunch {
    grid_init("@Url.Action("GetDocumentList", "Document")")

    var detailsUrl = '@Url.Action("ShowDocument", "Document")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
    window.location.href = detailsUrl  + '/' + e.row.Id;
    });
}