@model RapidDoc.Models.ViewModels.RoleViewModel
@using RapidDoc.Extensions;

@{
    ViewBag.Title = UIElementRes.UIElement.Edit;
}

<h2>@UIElementRes.UIElement.Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelForRequired(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @size = 255, @maxlength = 255, placeholder = "Administrator", @autofocus = "required", @x_webkit_speech = "" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @size = 256, @maxlength = 256, placeholder = "Description" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.RoleType)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.RoleType, new { @class = "selectpicker" })
            @Html.ValidationMessageFor(model => model.RoleType)
        </div>

        @{Html.RenderPartial("SaveBackBtn");}
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/editentity")
}

@section jslaunch {
    <script type="text/javascript">
        $(function () {
            selectpicker_init();
        });
    </script>
}