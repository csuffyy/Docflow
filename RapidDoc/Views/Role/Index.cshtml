@{
    ViewBag.Title = UIElementRes.UIElement.Roles;
}

<h2>@UIElementRes.UIElement.Roles</h2>

@{Html.RenderPartial("_NewEntityBtn");}

<div>
    @Html.Action("Grid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}
@section jslaunch {
<script type="text/javascript">
$(function () {
    grid_init("@Url.Action("GetRoleList", "Role")")

    var detailsUrl = '@Url.Action("Edit", "Role")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
    window.location.href = detailsUrl  + '/' + e.row.Id;
    });
});
</script>
}