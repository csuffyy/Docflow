@model RapidDoc.Models.Grids.RenameCompanyGrid
@using GridMvc.Html;

@helper EditField(RapidDoc.Models.ViewModels.RenameCompanyView item)
{
    <a href=@Url.Action("RenameEdit", new { id=item.Id })><span class="fa fa-pencil fa-lg"></span></a>
}

@helper DetailField(RapidDoc.Models.ViewModels.RenameCompanyView item)
{
    <a href=@Url.Action("RenameDetail", new { id=item.Id })><span class="fa fa-info-circle fa-lg"></span></a>
}

@helper DeleteField(RapidDoc.Models.ViewModels.RenameCompanyView item)
{
    <a href=@Url.Action("RenameDelete", new { id=item.Id })><span class="fa fa-trash-o fa-lg"></span></a>
}

@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
    columns.Add(o => o.Id).Css("hidden");
    columns.Add(o => o.FullCompanyName).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.RenameCompanyView)o.Columns).FullCompanyName).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.DateFrom).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.RenameCompanyView)o.Columns).DateFrom).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add(o => o.DateTo).Titled(Html.DisplayNameFor(o => ((RapidDoc.Models.ViewModels.RenameCompanyView)o.Columns).DateTo).ToHtmlString()).Sortable(true).Filterable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => EditField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DetailField(o));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => DeleteField(o));
}).Selectable(true).SetLanguage(UIElementRes.UIElement.LangName).Sortable().WithPaging(30).WithMultipleFilters()