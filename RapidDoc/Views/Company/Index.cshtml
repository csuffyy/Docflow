@{
    ViewBag.Title = UIElementRes.UIElement.Company;
}
@using GridMvc.Html;

<h2>@UIElementRes.UIElement.Company</h2>

@{Html.RenderPartial("_NewEntityBtn");}

<div>
    @Html.Action("Grid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/gridmvc")
}
@section jslaunch {
<script type="text/javascript">
$(function () {
    grid_init("@Url.Action("GetCompanyList", "Company")")

    var detailsUrl = '@Url.Action("Edit", "Company")';
    pageGrids.ordersGrid.onRowSelect(function (e) {
        window.location.href = detailsUrl  + '/' + e.row.Id;
    });
});
</script>
}